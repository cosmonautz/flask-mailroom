{% extends 'base.jinja2' %}

{% block subtitle %}View single donor's donations{% endblock subtitle %}

{% block content %}
<form method="POST">
    <label for="name-input">Donor Name:</label><input id="name-input" type="text" name="name"><br>
    <input type="submit" value="Get Donation">
</form>
{% if error %}<span class="error">{{ error }}<br>{% endif %}
{% if donor_name %}<span class="Donor">{{ donor_name }}<br>{% endif %}
<ul>
    {% for donation in donations %}
        <li> {{ donation.value }}</li>
    {% endfor %}
</ul>
{% endblock content %}